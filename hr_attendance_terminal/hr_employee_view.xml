<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.rfid</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="rfid"/>
                </field>
                <xpath expr="//page[1]/group[1]/group[3]" position="after">
                    <group>
                        <field name="exclude_on_punchclock"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_partner_tree2" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit.rfid</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_partner_tree2"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="rfid"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
